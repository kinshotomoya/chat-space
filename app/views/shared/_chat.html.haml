.chat__messages__contents__each
  .chat__messages__contents__box
    %p.chat__messages__contents__box__name
      =chat.user.name
    %p.chat__messages__contents__box__time
      =chat.created_at.strftime('%Y/%m/%d %H:%M')
  .chat__messages__contents__textbox
    -if chat.text.present?
      %p.chat__messages__contents__textbox__text
        =chat.text
    -elsif chat.image.present?
      %image{src: "#{chat.image}", height: "200", width: "200", alt: "画像"}
